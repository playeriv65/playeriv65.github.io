---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import LanguagePicker from "./LanguagePicker.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { name: t("nav.home"), href: lang === "en" ? "/" : `/${lang}/` },
  { name: t("nav.projects"), href: "#projects" },
  { name: t("nav.about"), href: "#about" },
];
---

<header class="global-nav glass animate-fade-in-up">
  <div class="nav-content mx-auto">
    <a href="/" class="nav-logo" aria-label="Home">
      <!-- Text Logo -->
      <span
        style="font-weight: 600; font-size: 1.1rem; letter-spacing: -0.02em;"
        >playeriv65</span
      >
    </a>

    <nav class="nav-links">
      <ul class="nav-list">
        {
          navItems.map((item) => (
            <li class="nav-item">
              <a href={item.href} class="nav-link">
                {item.name}
              </a>
            </li>
          ))
        }
        <li class="nav-item">
          <LanguagePicker />
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .global-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 44px;
    z-index: 9999;
    border-bottom: 1px solid var(--glass-border);
  }

  .nav-content {
    max-width: 980px;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 22px;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    color: var(--color-text);
    opacity: 0.8;
  }

  .nav-logo:hover {
    opacity: 1;
  }

  .nav-links {
    height: 100%;
    flex: 1;
    display: flex;
    justify-content: flex-end; /* Align right on desktop for now */
  }

  .nav-list {
    list-style: none;
    display: flex;
    height: 100%;
    gap: 32px;
    align-items: center;
  }

  .nav-item {
    height: 100%;
    display: flex;
    align-items: center;
  }

  .nav-link {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: -0.01em;
    color: var(--color-text);
    opacity: 0.8;
  }

  @media (max-width: 833px) {
    .nav-links {
      display: none; /* Hide on mobile to emulate Apple's collapsed menu */
    }
  }
</style>
