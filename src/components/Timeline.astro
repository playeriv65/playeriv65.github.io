---
import { getCollection } from "astro:content";
import { useTranslations } from "../i18n/utils";
import { Image } from "astro:assets";

export interface Props {
    lang: "en" | "zh";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Fetch and sort events by date descending
const allTimelineEvents = await getCollection("timeline");
const sortedEvents = allTimelineEvents.sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<section id="timeline" class="timeline-section">
    <div class="timeline-container mx-auto">
        <div class="timeline-header">
            <h2 class="section-title animate-fade-in-up">
                {t("timeline.headline")}
            </h2>
            <p class="section-subtitle animate-fade-in-up delay-100">
                {t("timeline.subheadline")}
            </p>
        </div>

        <div class="timeline-body">
            <!-- The Glow Track -->
            <div class="timeline-track">
                <div class="timeline-progress" id="timeline-progress"></div>
            </div>

            <div class="timeline-events">
                {
                    sortedEvents.map((event, index) => {
                        const title =
                            lang === "en"
                                ? event.data.title_en
                                : event.data.title_zh;
                        const desc =
                            lang === "en"
                                ? event.data.description_en
                                : event.data.description_zh;
                        const imageInput = event.data.image;

                        return (
                            <div class="timeline-item animate-on-scroll">
                                <div class="timeline-node">
                                    <span class="node-year">
                                        {event.data.year}
                                    </span>
                                </div>

                                <div class="timeline-content">
                                    <h3 class="timeline-title">{title}</h3>
                                    <p class="timeline-desc">{desc}</p>

                                    {imageInput && (
                                        <div class="timeline-image-wrapper test">
                                            <Image
                                                src={imageInput}
                                                alt={title}
                                                width={600}
                                                class="timeline-image"
                                            />
                                        </div>
                                    )}
                                </div>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </div>
</section>

<style>
    .timeline-section {
        padding: 120px 22px;
        position: relative;
        overflow: hidden;
    }

    .timeline-container {
        max-width: 980px;
        position: relative;
        z-index: 1;
    }

    .timeline-header {
        margin-bottom: 80px;
        text-align: center;
    }

    .timeline-body {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
        padding-bottom: 40px;
    }

    /* Track Base */
    .timeline-track {
        position: absolute;
        left: 36px;
        top: 0;
        bottom: 0;
        width: 2px; /* Increased to 2px for better visibility */
        background: rgba(255, 255, 255, 0.08);
        border-radius: 4px;
        z-index: 0;
    }

    /* Track Glowing Progress */
    .timeline-progress {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 0px; /* Animate height directly to prevent gradient stretch on scaling */
        background: linear-gradient(
            180deg,
            var(--color-primary) 0%,
            #7bc1ff calc(100% - 5px),
            rgba(123, 193, 255, 0) 100%
        );
        box-shadow: 0 0 12px rgba(41, 151, 255, 0.7); /* Slightly stronger glow */
        border-radius: 4px;
        /* Using height transition is fast enough for single absolute elements */
        transition: height 0.15s cubic-bezier(0.25, 0.1, 0.25, 1);
    }

    .timeline-events {
        display: flex;
        flex-direction: column;
        gap: 60px;
        position: relative;
        z-index: 10;
    }

    .timeline-item {
        position: relative;
        display: flex;
        flex-direction: column;
        padding-left: 80px;
    }

    /* Animation initial states */
    .timeline-item.animate-on-scroll {
        opacity: 0;
        transform: translateY(30px) scale(0.98);
        transition:
            opacity 0.8s var(--ease-apple),
            transform 0.8s var(--ease-apple);
    }
    .timeline-item.animate-on-scroll.appear {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Node Dot */
    .timeline-node {
        position: absolute;
        left: 0;
        top: 0;
        width: 74px;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 18px; /* Offset to center dot on line */
        z-index: 20;
    }

    .node-year {
        position: absolute;
        left: -90px; /* Shift further left for larger text */
        width: 70px;
        text-align: right;
        font-family: var(--font-mono);
        font-size: 18px; /* Larger font */
        font-weight: 600; /* Bolder */
        letter-spacing: 0.02em;
        color: rgba(255, 255, 255, 0.4);
        transition: all 0.5s var(--ease-apple);
        top: -4px; /* Align vertically with the top of the card/intersection */
    }

    /* Activated Year */
    .timeline-item.active .node-year {
        color: #fff;
        transform: scale(1.1) translateX(-4px); /* Typographic pop */
        text-shadow: 0 0 16px rgba(41, 151, 255, 0.6); /* Glow on text instead of dot */
    }

    /* Content Area */
    .timeline-content {
        background: var(--card-bg);
        padding: 32px;
        border-radius: var(--radius-card);
        corner-shape: squircle; /* Native Apple-style continuous curvature */
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.05);
        border: none;
    }

    .timeline-title {
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 8px;
        color: var(--color-text);
        letter-spacing: -0.015em;
    }

    .timeline-desc {
        font-size: 15px;
        color: var(--color-text-muted);
        line-height: 1.6;
        margin-bottom: 0;
    }

    .timeline-image-wrapper {
        margin-top: 24px;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.08);
        background: #000;
        /* Force GPU scaling to remove tearing on hover */
        transform: translateZ(0);
    }

    .timeline-image {
        display: block; /* Removes the bottom gap */
        width: 100%;
        height: auto;
        object-fit: cover;
        opacity: 0.85;
        transition:
            transform 0.6s var(--ease-apple),
            opacity 0.6s ease;
    }

    .timeline-content:hover .timeline-image {
        opacity: 1;
        transform: scale(1.03);
    }

    @media (max-width: 833px) {
        .timeline-body {
            padding-left: 20px; /* Make room for line on mobile */
        }
        .node-year {
            position: relative;
            left: 0;
            text-align: left;
            margin-bottom: 4px;
            padding-left: 80px;
            display: block;
            width: 100%;
        }
        .timeline-node {
            position: relative;
            width: 100%;
            height: 0;
            display: block;
        }
    }
</style>

<script>
    // Component Client-Side Script
    document.addEventListener("DOMContentLoaded", () => {
        const track = document.querySelector(".timeline-track");
        const progress = document.getElementById("timeline-progress");
        const items = document.querySelectorAll(".timeline-item");

        if (!track || !progress) return;

        // Better trigger point: 80% of viewport height (more visible)
        const getTriggerPoint = () => window.innerHeight * 0.8;

        const updateTimelineHeight = () => {
            const trackRect = track.getBoundingClientRect();
            const triggerPoint = getTriggerPoint();
            const trackTop = trackRect.top;

            // Calculate progress: how much of the track is above our trigger point
            let absoluteProgress = triggerPoint - trackTop;

            if (absoluteProgress < 0) absoluteProgress = 0;
            if (absoluteProgress > trackRect.height)
                absoluteProgress = trackRect.height;

            progress.style.height = `${absoluteProgress}px`;
        };

        // Refined 'appear' & 'active' triggers inside scroll for precise syncing
        const updateActiveStates = () => {
            const triggerPoint = getTriggerPoint();
            items.forEach((item) => {
                const rect = item.getBoundingClientRect();

                // Add appear class early so it fades in smoothly
                if (rect.top < triggerPoint + 150) {
                    item.classList.add("appear");
                }

                // Add active class right when the laser line touches it
                if (rect.top < triggerPoint + 30) {
                    item.classList.add("active");
                } else {
                    item.classList.remove("active");
                }
            });
        };

        let ticking = false;
        const handleScroll = () => {
            if (!ticking) {
                window.requestAnimationFrame(() => {
                    updateTimelineHeight();
                    updateActiveStates();
                    ticking = false;
                });
                ticking = true;
            }
        };

        window.addEventListener("scroll", handleScroll, { passive: true });
        window.addEventListener("resize", handleScroll, { passive: true });

        // Initial check
        updateTimelineHeight();
        updateActiveStates();
    });
</script>
