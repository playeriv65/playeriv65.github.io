---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Zelin Li | Personal Website">
	<Header />
	
	<main>
		<!-- Hero Section -->
		<section class="hero-section">
			<div class="hero-content mx-auto text-center">
				<h1 class="hero-title animate-fade-in-up">Pro. Beyond.</h1>
				<p class="hero-subtitle animate-fade-in-up delay-100">
					Engineering systems. Crafting experiences.
				</p>
				<div class="hero-cta animate-fade-in-up delay-200">
					<a href="#projects" class="btn btn-primary">View Projects</a>
					<a href="#" class="btn btn-secondary">Resume â†—</a>
				</div>
			</div>
			
			<!-- Abstract visual element (glow) -->
			<div class="glow-container animate-fade-in-up delay-300">
				<div class="glow"></div>
			</div>
		</section>

		<!-- Introduction Section -->
		<section id="about" class="intro-section reveal-on-scroll">
			<div class="content-wrapper mx-auto text-center">
				<h2 class="section-headline">Hello, I'm Zelin.</h2>
				<p class="intro-body text-muted">
					A Software Developer passionate about AI, Systems, and building products that just work.<br/>
					Currently seeking 2026 SDE Internships.
				</p>
			</div>
		</section>

		<!-- Projects Grid -->
		<section id="projects" class="projects-section">
			<div class="content-wrapper mx-auto">
				<div class="section-header text-center reveal-on-scroll">
					<h2 class="section-headline">Featured Work.</h2>
					<p class="section-subheadline text-muted">A selection of my recent projects.</p>
				</div>
				
				<div class="bento-grid">
					<!-- Project 1 (Large) -->
					<div class="bento-card bento-large reveal-on-scroll">
						<div class="card-content">
							<h3 class="card-title">Project Alpha</h3>
							<p class="card-desc">Advanced AI Integration System</p>
							<a href="#" class="card-link">Learn more ></a>
						</div>
					</div>
					
					<!-- Project 2 (Small) -->
					<div class="bento-card reveal-on-scroll delay-100">
						<div class="card-content">
							<h3 class="card-title">MemBench</h3>
							<p class="card-desc">Data Generation Pipeline</p>
							<a href="#" class="card-link">Learn more ></a>
						</div>
					</div>
					
					<!-- Project 3 (Small) -->
					<div class="bento-card reveal-on-scroll delay-200">
						<div class="card-content">
							<h3 class="card-title">LLM Scoring</h3>
							<p class="card-desc">Evaluation Framework</p>
							<a href="#" class="card-link">Learn more ></a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	main {
		width: 100%;
		overflow-x: hidden;
	}

	.content-wrapper {
		max-width: 980px;
		padding: 0 22px;
	}

	/* Hero Section */
	.hero-section {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding-top: 44px; /* Offset for header */
		position: relative;
	}

	.hero-content {
		z-index: 10;
		max-width: 800px;
		padding: 0 22px;
	}

	.hero-title {
		font-size: clamp(56px, 8vw, 96px);
		line-height: 1.05;
		font-weight: 700;
		letter-spacing: -0.015em;
		margin-bottom: 16px;
	}

	.hero-subtitle {
		font-size: clamp(24px, 4vw, 32px);
		line-height: 1.1;
		font-weight: 500;
		color: var(--color-text-muted);
		margin-bottom: 24px;
	}

	.hero-cta {
		display: flex;
		gap: 16px;
		justify-content: center;
		margin-top: 32px;
	}

	/* Abstract Glow */
	.glow-container {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 50vh;
		display: flex;
		justify-content: center;
		overflow: hidden;
		z-index: 0;
		pointer-events: none;
	}

	.glow {
		width: 800px;
		height: 400px;
		background: radial-gradient(ellipse at bottom, rgba(41, 151, 255, 0.4) 0%, rgba(0, 0, 0, 0) 60%);
		position: absolute;
		bottom: -100px;
		filter: blur(60px);
	}

	/* Typography Sections */
	.section-headline {
		font-size: clamp(40px, 6vw, 56px);
		line-height: 1.07143;
		font-weight: 600;
		letter-spacing: -0.005em;
		margin-bottom: 20px;
	}

	.section-subheadline {
		font-size: 24px;
		line-height: 1.16667;
		font-weight: 400;
		letter-spacing: .009em;
		margin-bottom: 60px;
	}

	.text-muted {
		color: var(--color-text-muted);
	}

	/* Intro */
	.intro-section {
		padding: 120px 0;
	}

	.intro-body {
		font-size: clamp(20px, 3vw, 28px);
		line-height: 1.3;
		font-weight: 500;
		max-width: 700px;
		margin: 0 auto;
	}

	/* Projects / Bento Grid */
	.projects-section {
		padding: 80px 0;
	}

	.bento-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 24px;
	}

	.bento-card {
		background-color: var(--card-bg);
		border-radius: 28px;
		height: 400px;
		padding: 40px;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		position: relative;
		overflow: hidden;
		transition: transform 0.3s var(--ease-apple);
	}

	.bento-card:hover {
		transform: scale(1.02);
	}

	.bento-large {
		grid-column: span 2;
		height: 500px;
	}

	.card-title {
		font-size: 28px;
		margin-bottom: 8px;
	}

	.card-desc {
		font-size: 17px;
		color: var(--color-text-muted);
	}

	.card-link {
		margin-top: auto;
		display: inline-block;
		font-weight: 600;
	}

	@media (max-width: 734px) {
		.bento-grid {
			grid-template-columns: 1fr;
		}
		
		.bento-large {
			grid-column: span 1;
			height: 400px;
		}

		.hero-cta {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 100%;
			max-width: 300px;
		}
	}
</style>
